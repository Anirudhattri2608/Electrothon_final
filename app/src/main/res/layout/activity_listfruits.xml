<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listfruits">

    <Button
        android:id="@+id/Bilambi"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="60dp"
        android:text="Bilambi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toEndOf="@+id/Camachile"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Chakotra"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="60dp"
        android:text="Chakotra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toEndOf="@+id/Anjeer"
        app:layout_constraintTop_toBottomOf="@+id/Bilambi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="283dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:fontFamily="casual"
        android:text="@string/list_of_fruits"
        android:textAlignment="center"
        android:textColor="#43A047"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="357dp"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        android:text="and yes you won't believe these are found in India"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/Camachile"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="176dp"
        android:text="Camachile"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Anjeer"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:text="Anjeer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Camachile" />

    <Button
        android:id="@+id/Ambarella"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Ambarella"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Anjeer" />

    <Button
        android:id="@+id/Koranda"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:text="Koranda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toEndOf="@+id/Ambarella"
        app:layout_constraintTop_toBottomOf="@+id/Chakotra" />

    <Button
        android:id="@+id/Carambola"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Carambola"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ambarella" />

    <Button
        android:id="@+id/Langsat"
        android:layout_width="135dp"
        android:layout_height="60dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:text="Langsat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@+id/Carambola"
        app:layout_constraintTop_toBottomOf="@+id/Koranda" />

    <Button
        android:id="@+id/Dadim"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Dadim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BuddhaFinger" />

    <Button
        android:id="@+id/BuddhaFinger"
        android:layout_width="179dp"
        android:layout_height="63dp"
        android:layout_marginTop="340dp"
        android:text="Buddha's Finger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>